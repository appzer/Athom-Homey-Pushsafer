{
	"id": "de.appzer.pushsafer",
	"sdk": 2,
	"name": {
		"en": "Pushsafer Notification",
		"de": "Pushsafer Benachrichtigung",
		"nl": "Pushsafer notificatie"
	},
	
	"description": {
		"en": "Pushsafer notifications for Homey with Image support",
		"de": "Pushsafer Benachrichtigungen für Homey mit Bild",
		"nl": "Pushsafer notificatie voor Homey met afbeelding"	
	},
	"images": {
	  "large": "./assets/images/large.jpg",
	  "small": "./assets/images/small.jpg"
	},
	"category": "tools",
	"version": "0.0.9",
	"compatibility": ">=1.5.0",
	"brandColor": "#074a82",
	"author": {
		"name": "Kevin Siml",
		"email": "info@appzer.de"
	},
	"permissions": ["homey:manager:ledring"],
	"flow": {
		"actions": [
		  {
			"id": "pushsaferSend",
			"title": {
				"en": "Pushsafer notification",
				"de": "Pushsafer Benachrichtigung",
				"nl": "Pushsafer notificatie"
			},
			"args": [
				{
				  "name":"message",
				  "type":"text",
				  "placeholder":{
					"en":"Message",
					"de":"Nachricht",
					"nl":"Bericht"
				  }
				},
				{
				  "name":"title",
				  "type":"text",
				  "placeholder":{
					"en":"Title",
					"de":"Titel",
					"nl":"Titel"
				  }
				},
				{
				  "name":"device",
				  "type":"text",
				  "placeholder":{
					"en":"Device or Device Group ID",
					"de":"Geräte oder Geräte Gruppen ID",
					"nl":"Apparaat- of apparaatgroep-ID"
				  }
				},
				{
				  "name":"icon",
				  "type":"number",
				  "min": 1,
				  "max": 177,
				  "step": 1,
				  "placeholder":{
					"en":"Icon ID (1-177)",
					"de":"Icon ID (1-177)",
					"nl":"Icon ID (1-177)"
				  }
				},
				{
				  "name":"iconcolor",
				  "type":"color"
				},				
				{
				  "name":"sound",
				  "type":"number",
				  "min": 0,
				  "max": 60,
				  "step": 1,
				  "placeholder":{
					"en":"Sound ID (empty or 0-60)",
					"de":"Sound ID (leer oder 0-60)",
					"nl":"Geluid ID (leeg of 0-60)"
				  }
				},
				{
				  "name":"vibration",
				  "type":"number",
				  "placeholder":{
					"en":"Vibration (0-3)",
					"de":"Vibration (0-3)",
					"nl":"Vibratie (0-3)"
				  }
				},
				{
				  "name":"url",
				  "type":"text",
				  "placeholder":{
					"en":"URL (f.e. https://www.pushsafer.com)",
					"de":"URL (z.B. https://www.pushsafer.com)",
					"nl":"URL (bijv. https://www.pushsafer.com)"
				  }
				},
				{
				  "name":"urltitle",
				  "type":"text",
				  "placeholder":{
					"en":"Title of URL",
					"de":"Titel der URL",
					"nl":"Titel van URL"
				  }
				},
				{
				  "name":"time2live",
				  "type":"number",
				  "placeholder":{
					"en":"Time to Live Integer number 0-43200",
					"de":"Time to Live Ganzzahl 0-43200",
					"nl":"Time to Live Geheel getal 0-43200"
				  }
				},
				{
				  "name":"priority",
				  "type":"number",
				  "placeholder":{
					"en":"Priority -2, -1, 0, 1, 2",
					"de":"Priorität -2, -1, 0, 1, 2",
					"nl":"prioriteit -2, -1, 0, 1, 2"
				  }
				},
				{
				  "name":"retry",
				  "type":"number",
				  "placeholder":{
					"en":"Retry 60-1080 or 0 = deactivated",
					"de":"Erneut senden 60-10800 oder 0 = deaktivert",
					"nl":"opnieuw versturen 60-10800 of 0 = gedeactiveerd"
				  }
				},
				{
				  "name":"expire",
				  "type":"number",
				  "placeholder":{
					"en":"Expire 60-1080 or 0 = deactivated",
					"de":"Verfall 60-10800 oder 0 = deaktivert",
					"nl":"vervallen 60-10800 of 0 = gedeactiveerd"
				  }
				},
				{
				  "name":"answer",
				  "type":"number",
				  "placeholder":{
					"en":"Answer 1 or 0k",
					"de":"Antwort 1 oder 0",
					"nl":"Antwoord 1 of 0"
				  }
				}
			]
		},
		{
		  "id": "pushsaferSendImage",
		  "title": {
			  "en": "Pushsafer Image",
			  "de": "Pushsafer Bild",
			  "nl": "Pushsafer Foto"
		  },
		  "args": [
			{
				"name":"imageurl",
				"type":"text",
				"placeholder":{
				  "en":"Image URL",
				  "de":"Bild URL",
				  "nl":"Foto URL"
				}
			},
			{
				"name":"message",
				"type":"text",
				"placeholder":{
				  "en":"Message",
				  "de":"Nachricht",
				  "nl":"Bericht"
				}
			},
			{
				"name":"title",
				"type":"text",
				"placeholder":{
				  "en":"Title",
				  "de":"Titel",
				  "nl":"Titel"
				}
			},
			{
				"name":"device",
				"type":"text",
				"placeholder":{
					"en":"Device or Device Group ID",
					"de":"Geräte oder Geräte Gruppen ID",
					"nl":"Apparaat- of apparaatgroep-ID"
				}
			},
			{
				"name":"icon",
				"type":"number",
				"min": 1,
				"max": 177,
				"step": 1,
				"placeholder":{
					"en":"Icon ID (1-177)",
					"de":"Icon ID (1-177)",
					"nl":"Icon ID (1-177)"
				}
			},
			{
				"name":"iconcolor",
				"type":"color"
			},				
			{
				"name":"sound",
				"type":"number",
				"min": 0,
				"max": 60,
				"step": 1,
				"placeholder":{
					"en":"Sound ID (empty or 0-60)",
					"de":"Sound ID (leer oder 0-60)",
					"nl":"Geluid ID (leeg of 0-60)"
				}
			},
			{
				"name":"vibration",
				"type":"number",
				"placeholder":{
					"en":"Vibration (0-3)",
					"de":"Vibration (0-3)",
					"nl":"Vibratie (0-3)"
				}
			},
			{
				"name":"url",
				"type":"text",
				"placeholder":{
					"en":"URL (f.e. https://www.pushsafer.com)",
					"de":"URL (z.B. https://www.pushsafer.com)",
					"nl":"URL (bijv. https://www.pushsafer.com)"
				}
			},
			{
				"name":"urltitle",
				"type":"text",
				"placeholder":{
					"en":"Title of URL",
					"de":"Titel der URL",
					"nl":"Titel van URL"
				 }
			},
			{
				"name":"time2live",
				"type":"text",
				"placeholder":{
					"en":"Time to Live Integer number 0-43200",
					"de":"Time to Live Ganzzahl 0-43200",
					"nl":"Time to Live Geheel getal 0-43200"
				}
			},
			{
			  "name":"priority",
			  "type":"number",
			  "placeholder":{
				"en":"Priority -2, -1, 0, 1, 2",
				"de":"Priorität -2, -1, 0, 1, 2",
				"nl":"prioriteit -2, -1, 0, 1, 2"
			  }
			},
			{
			  "name":"retry",
			  "type":"number",
			  "placeholder":{
				"en":"Retry 60-1080 or 0 = deactivated",
				"de":"Erneut senden 60-10800 oder 0 = deaktivert",
				"nl":"opnieuw versturen 60-10800 of 0 = gedeactiveerd"
			  }
			},
			{
			  "name":"expire",
			  "type":"number",
			  "placeholder":{
				"en":"Expire 60-1080 or 0 = deactivated",
				"de":"Verfall 60-10800 oder 0 = deaktivert",
				"nl":"vervallen 60-10800 of 0 = gedeactiveerd"
			  }
			},
			{
			  "name":"answer",
			  "type":"number",
			  "placeholder":{
				"en":"Answer 1 or 0",
				"de":"Antwort 1 oder 0",
				"nl":"Antwoord 1 of 0"
			  }
			}
		  ]
		}
	  ]
	},
	"dependencies": {
		"pushsafer-notifications": "*",
		"http.min": "*",
		"requests": "*"
	}
}
